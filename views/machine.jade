extends ./layout.jade

block title
  title FGLab

block content
  h1 #[span.mega-octicon.octicon-server] Machine: #{machine.hostname} #[small.text-muted (#{machine._id})]
  dl.dl-horizontal
    dt.col-sm-3 Hostname
    dd.col-sm-9 #{machine.hostname}
    dt.col-sm-3 Address
    dd.col-sm-9 #{machine.address}
    dt.col-sm-3 OS
    dd.col-sm-9 #{machine.os.type} #{machine.os.arch} #{machine.os.release}
    dt.col-sm-3 CPUS
    dd.col-sm-9
      ul.list-unstyled
        - each cpu in machine.cpus
          li= cpu
    dt.col-sm-3 RAM
    dd.col-sm-9 #{machine.mem}
    dt.col-sm-3 GPUS
    dd.col-sm-9
      ul.list-unstyled
        - each gpu in machine.gpus
          li= gpu
